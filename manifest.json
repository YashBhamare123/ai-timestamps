{
    "manifest_version": 3,

    "name": "AI YouTube Timestamps",
    "description": "Generate AI-powered timestamps for YouTube videos.",
    "version": "2.0.0",

    "browser_specific_settings": {
        "gecko": {
            "id": "ai-youtube-timestamps@ris58h"
        }
    },

    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*", 
        "https://www.youtube-nocookie.com/*",
        "http://localhost:8000/*"
    ],

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Generate AI Timestamps",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },

    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },

    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*", "https://www.youtube-nocookie.com/embed/*"],
            "all_frames": true,
            "js": ["scripts/content.js"],
            "css": ["scripts/content.css"]
        }
    ]
}